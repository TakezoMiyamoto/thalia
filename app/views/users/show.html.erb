<% content_for :head do %>
  <meta name="title" content="<%=@user.username %>">
  <meta name="description" content="<%=@user.username %>のマイページ">
<% end %>

<div class="container">
    <div class="row">
        <div class="col-md-4 col-md-offset-4 user-profile">
            <h4><%= @user.username %></h4>
            <!-- image -->

            <% if @user.avatar.url == nil  %>
                <p><%= link_to image_tag("/images/icon.png" , alt: "usericon"), user_path(@user) %></p>
            <% else %>
                <p><%= link_to image_tag(@user.avatar.url , alt: @user.username), user_path(@user) %></p>
            <% end %>
            <%= @user.introduce %><br/>

            <% if @user == current_user %>
                <%= link_to "Edit my Profile", edit_user_path(@user), class: "btn btn-large btn-info edit-btn" %>
            <% end %>
            <% if @user == current_user %>
                <%= link_to "Post New Work", new_work_path, class: "btn btn-large btn-info edit-btn" %>
            <% end %>


        </div>
        <div class="col-md-9 user-profile-projects">

          <% if @works.any? %>
            <%= render 'works/list' , works: @works %>
          <% else %>
            <p>Currently, there is no your work.</p>
          <% end %>
        </div>

    </div>
</div>
