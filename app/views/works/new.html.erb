<% content_for :head do %>
  <meta name="title" content="新規ワーク作成">
  <meta name="description" content="新しいワークを作成しよう">
<% end %>

<div class="row">
  <div class="col-xs-10 col-xs-offset-1 col-md-6 col-md-offset-3 edit-project">
  <h3 style="text-align: center;">ワークを作成する</h3>
    <%= simple_form_for(@work) do |f| %>
    <!-- error messages -->
    <%= f.error_notification %>

      <%= f.input :title,label: 'ワーク名', error: 'ワークは必須です。', :placeholder => "(例) 新感覚デニムを一からつくる！" %><br/>

      <%= f.input :youtube_url, as: :url, label: 'Youtube動画 URL',:placeholder => "https://www.youtube.com/watch?v=xxxxxxxxxxx" %></br>

      <%= f.label :description, "ワーク説明",  class: 'control-label' %>
      <%= f.text_area :description, class: 'form-control' %><br/>
      <%= f.submit "新規投稿する！", class: "btn btn-large btn-primary form-control" %>

    <% end %>
